@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<html lang="pl">
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register" title="Zarejestruj się">
            <div class="d-none d-md-flex nav-button-circle">
                <i class="bi bi-person-plus"></i>
            </div>
            <div class="d-flex  d-md-none">
                <i class="bi bi-person-plus"></i>
                &nbsp Zarejestruj się
            </div>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login" title="Zaloguj się">
            <div class="d-none d-md-flex nav-button-circle">
                <i class="bi bi-door-open"></i>
            </div>
            <div class="d-flex  d-md-none">
                <i class="bi bi-door-open"></i>
                &nbsp Zaloguj się
            </div>
        </a>
    </li>
}
</ul>
</html>